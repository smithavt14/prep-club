<div class="form-new-wrapper">
  <h2 class="form-new-prep-title">Sign up for a prepClub account!</h2>
  <div class="container form-container">
    <div class="form-new-prep">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :email, required: true, autofocus: true %>
          <%= f.input :name, required: true, autofocus: true %>
          <%= f.input :gender, required: false, autofocus: true %>
          <%= f.input :location, required: false, autofocus: true %>
          <%= f.input :bio, required: false, autofocus: true %>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
          <%= f.input :password, required: true, placeholder: "••••••", hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
          <%= f.input :password_confirmation, placeholder: "••••••", required: true %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Sign up", class:"btn_skinny" %>
        </div>
      <% end %>
      <%= render "devise/shared/links", style: "text-align: center;" %>
    </div>
  </div>
</div>