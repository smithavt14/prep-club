<div class="form-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col col-xs-12 col-sm-6">
        <div>
          <h2 class="form-new-prep-title">Log in to your account</h2>
        </div>
      </div>
      <div class="col col-xs-12 col-sm-6">
        <div class="form-new-prep">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">
              <%= f.input :email, required: false, autofocus: true %>
              <%= f.input :password, required: false, placeholder: "••••••" %>
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>
            <div class="form-actions">
              <%= f.button :submit, "Log in", class:"btn_skinny"%>
            </div>
          <% end %>
          <%= render "devise/shared/links", style: "text-align: center;" %>
        </div>
      </div>
    </div>
  </div>
</div>