<div class="form-new-wrapper">
  <h2 class="form-new-prep-title ">Edit your meal prep</h2>
  <div class="container form-container">
    <div class="form-new-prep">
      <%= simple_form_for (@prep) do |f| %>
        <h4>Basic info</h4>
        <%= f.input :name %>
        <%= f.input :description, placeholder: "Talk a bit about your event..."%>
        <%= f.input :location, placeholder: "158 Julu Road, Shanghai", id: "prep-location" %>
        <%= f.input :time, as: :string, required: false, input_html: {class: "datepicker"} %>
        <%= f.input :max_participants, placeholder: "1 - 20" %>
        <h4>Recipe info</h4>
        <%= link_to 'Search for a recipe', '#', id: "search-recipe", wrapper_html: { id: "recipe_search" } %>
        <%= f.input :recipe_name %>
        <%= f.input :recipe_url %>
        <%= f.input :recipe_ingredients, as: :hidden %>
        <%= f.input :tag_list %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <div class="form-new-prep-button">
          <%= f.submit "Update", class: "btn_skinny text-align" %>
        </div>
      <% end %>
      <br>
      <%= link_to "Back to Index", preps_path %>
    </div>
  </div>
</div>
<% content_for :after_js do %>
  <script>
    flatpickr(".datepicker", {
       altInput: true,
       enableTime: true
    })
  </script>
<% end %>