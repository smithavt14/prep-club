<div class="show-wrapper">
  <div class="show-container">
    <div class="row">
      <div class="col col-md-6">
        <div class="show-card">
          <div class="show-card-left-photo" style="background-image: url('<%= @prep.photo? ? (cl_image_path @prep.photo) : (image_url 'placeholdermeal2.jpg') %>')">
          </div>
          <div class="show-card-body-left">
            <div class="show-card-tags">
              <% @prep.tag_list.each do |tag| %>
                <%= tag %>
              <% end %>
            </div>
            <div class="show-card-meal-title">
              <p><strong><%= @prep.name %></strong></p>
            </div>
            <div class="show-card-meal-description">
              <p><%= @prep.description %></p>
              <p><%= @prep.description %></p>
              <p><%= @prep.description %></p>
              <p><%= @prep.description %></p>
            </div>
          </div>
        </div>
      </div>
      <div class="col col-md-6" style="position: sticky !important;
  top: 0 !important;">
        <div class="show-card">
          <ul class="list-inline show-card-booked-avatars">
            <% @prep.bookings.each do |booking| %>
              <li style="list-style-type: none;">
                <%= link_to user_path(booking.user) do %>
                  <div class="show-card-avatar-sm" style="background-image: url('<%= booking.user.photo? ? (cl_image_path booking.user.photo) : (image_url 'logo.png') %>');"></div>
                <% end %>
              </li>
            <% end %>
          </ul>
          <div class="show-card-join">
            <% if @user_booking_status %>
              <%= link_to "Cancel booking", prep_booking_path(@booking),
              method: :delete,
              data: { confirm: "Cancel this booking?" },
              class:"btn_fat" %>
            <% else %>
              <%= link_to "Join this meal prep", prep_bookings_path(@prep),
              method: :post,
              data: { confirm: "Are you sure?" },
              class:"btn_fat" %>
            <% end %>
          </div>
          <div class="show-card-avatar-md" style="background-image: url('<%= @prep.user.photo? ? (cl_image_path @prep.user.photo) : (image_url 'logo.png') %>');"></div>
          <div class="show-card-body-right">
            <div class="show-card-title">
              <p> <strong><%= @prep.user.name %></strong> | head chef</p>
            </div>
            <div class="show-card-meal-location-count" style="margin: 25px;">
              <p><strong>Location</strong> | <%= @prep.location %> </p>
              <p><strong>Max preppers</strong> | <%= @prep.max_participants %></p>
              <p><strong>Time</strong> | <%= @prep.nicetime %></p>
            </div>
          </div>
          <div class="show-card-right-map" style="background-image: url('https://geographic.media/wp-content/uploads/Melbourne-Google-Street-Map.jpg')">
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="show-wrapper"></div>
<h2><%= @prep.name %></h2>
<%= cl_image_tag @prep.photo, height: 300, width: 400, crop: :fill %>
<p><%= @prep.meal %></p>
<p><%= @prep.description %></p>
<p>Max # of Participants: <%= @prep.max_participants %></p>
<p><%= @prep.time %></p>
<p><%= @prep.location %></p>
<p><% @prep.tag_list.each do |tag| %>
    <%= link_to tag, tagged_path(tag: tag) %>
  <% end %>
</p>
<p><strong>Bookings:</strong></p>
<ul>
  <% @prep.bookings.each do |booking| %>
    <li><%= booking.user.name %>
      <%= link_to "Check out their bio", user_path(booking.user) %>
    </li>
  <% end %>
</ul>
<p><strong>Reviews:</strong></p>
<ul>
  <% @prep.reviews.each do |review| %>
    <li>
      <p><%= review.user.name %></p>
      <p><%= review.content %></p>
      <p><%= review.rating %></p>
    </li>
  <% end %>
</ul>
<%= link_to "Home", preps_path %>
<% if @user_booking_status == true %>
  <%= link_to "Cancel booking", prep_bookings_path(@prep),
      method: :delete,
      data: { confirm: "Canclel this booking?" } %>
<% else %>
  <%= link_to "Book", prep_bookings_path(@prep),
      method: :post,
      data: { confirm: "Book this meal prep?" } %>
<% end %>
<% if @prep.user == current_user %>
  <%= link_to "Edit", edit_prep_path(@prep) %>
  <%= link_to "Delete", prep_path(@prep),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
<% end %>
<% if @prep.check_booking_status?(current_user) && @prep.check_event_time? %>
  <%= link_to "Review", new_prep_review_path(@prep) %>
<% end %>