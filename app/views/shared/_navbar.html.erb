<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path do %>
    <div class="navbar-wagon-brand">
      <%= image_tag "icon.svg", height: 40 %>
      <p><strong>prep</strong>Club</p>
    </div>
  <% end %>
  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">
    <% if user_signed_in? %>
      <!-- Links when logged in -->
      <div class="navbar-wagon-right-links">
        <%= link_to "Discover", preps_path %>
        <%= link_to "Create", new_prep_path %>
        <%= link_to "Logout", destroy_user_session_path, method: :delete %>
      </div>
      <!-- Avatar with dropdown menu -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <%= link_to user_path(current_user) do %>
            <div class="avatar-sm dropdown-toggle" style="background-image: url('<%= cl_image_path current_user.photo %>'); background-size: cover; background-position: center;" id= "navbar-wagon-menu">
            </div>
          <% end %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to user_path(current_user) do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-cog"></i>  <%= t(".settings", default: "Settings") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
      <!-- Login link (when logged out) -->
      <div class="wagon-navbar-login-link">
        <%= link_to t(".sign_in", default: "Login"), new_user_session_path %>
        <%= link_to "Sign up", new_user_registration_path %>
      </div>
    <% end %>
  </div>
  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><%= link_to "My profile", user_path(current_user) %></li>
        <li><%= link_to "Discover", preps_path %></li>
        <li><%= link_to "Create", new_prep_path %></li>
        <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
      </ul>
    </div>
  </div>
</div>